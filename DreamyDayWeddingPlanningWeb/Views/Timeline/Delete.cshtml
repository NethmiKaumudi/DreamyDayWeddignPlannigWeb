@model DreamyDayWeddingPlanningWeb.Models.TimelineEvent

@{
    ViewData["Title"] = "Delete Timeline Event";
    Layout = "~/Views/Shared/_CoupleLayout.cshtml";
}

<h2 class="mb-4 mt-4 text-center" style="font-size: 24px; color: #333;">Delete Timeline Event</h2>

<div class="container-fluid">
    <div class="card">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }
        else
        {
            <h2 class="mb-4 mt-4 text-center" style="font-size: 20px; color: #333;">Delete Timeline Event</h2>
            <hr class="mb-3" />
            <h4 class="text-danger">Are you sure you want to delete this timeline event?</h4>

            <dl class="row">
                <dt class="col-sm-3">Wedding ID</dt>
                <dd class="col-sm-9">
                    <input type="text" class="form-control" value="@ViewBag.WeddingId" readonly />
                </dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EventName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EventName)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StartTime)</dt>
                <dd class="col-sm-9">@Model.StartTime.ToString("hh:mm tt, MMM dd, yyyy")</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EndTime)</dt>
                <dd class="col-sm-9">@Model.EndTime.ToString("hh:mm tt, MMM dd, yyyy")</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        }
    </div>
</div>

<style>
    .container-fluid {
        width: 100%;
        padding: 15px;
        height: 100%;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
    }

        .card h2 {
            font-size: 20px;
            color: #333;
            margin-left: 15px;
        }

    .row {
        margin: 0;
    }

    .col-sm-3 {
        font-weight: bold;
        color: #333;
    }

    .col-sm-9 {
        color: #555;
    }

    .form-control[readonly] {
        background-color: #f8f9fa;
        cursor: not-allowed;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        padding: 8px 15px;
        color: #fff;
        border-radius: 5px;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        padding: 8px 15px;
        color: #fff;
        border-radius: 5px;
        margin-left: 10px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .text-danger {
        margin-bottom: 15px;
    }

    .alert {
        margin-bottom: 15px;
    }
</style>