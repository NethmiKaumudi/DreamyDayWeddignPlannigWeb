@model DreamyDayWeddingPlanningWeb.Models.TimelineEvent

@{
    ViewData["Title"] = "Create Timeline Event";
    Layout = "~/Views/Shared/_CoupleLayout.cshtml";
}

<h2 class="mb-4 mt-4 text-center" style="font-size: 24px; color: #333;" >Create Timeline Event</h2>

<div class="container-fluid">
    <div class="card">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }
        else
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <form asp-action="Create">
                <input type="hidden" asp-for="WeddingId" />
                <div class="mb-3">
                    <label class="form-label">Wedding ID</label>
                    <input type="text" class="form-control" value="@ViewBag.WeddingId" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="EventName" class="form-label">Event Name</label>
                    <input asp-for="EventName" class="form-control" placeholder="Enter event name" />
                    <span asp-validation-for="EventName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="StartTime" class="form-label">Start Time</label>
                    <input asp-for="StartTime" class="form-control" type="datetime-local"
                           value="@(Model.StartTime != null ? Model.StartTime.ToString("yyyy-MM-ddTHH:mm") : DateTime.Today.ToString("yyyy-MM-ddTHH:mm"))" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="EndTime" class="form-label">End Time</label>
                    <input asp-for="EndTime" class="form-control" type="datetime-local"
                           value="@(Model.EndTime != null ? Model.EndTime.ToString("yyyy-MM-ddTHH:mm") : DateTime.Today.AddHours(1).ToString("yyyy-MM-ddTHH:mm"))" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        }
    </div>
</div>

<style>
    .container-fluid {
        width: 100%;
        padding: 15px;
        height: 100%;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
    }

        .card h2 {
            font-size: 20px;
            color: #333;
            margin-left: 15px;
        }

    .form-label {
        font-weight: bold;
        color: #333;
    }

    .form-control, textarea {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
    }

        .form-control[readonly] {
            background-color: #f8f9fa;
            cursor: not-allowed;
        }

        .form-control:focus, textarea:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
        }

    textarea {
        resize: vertical;
        min-height: 80px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 8px 15px;
        color: #fff;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        padding: 8px 15px;
        color: #fff;
        border-radius: 5px;
        margin-left: 10px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .mb-3 {
        margin-bottom: 15px;
    }

    .text-danger {
        margin-top: 5px;
    }

    .alert {
        margin-bottom: 15px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}