@model DreamyDayWeddingPlanningWeb.Models.Guest

@{
    ViewData["Title"] = "Guest Details";
    Layout = "~/Views/Shared/_CoupleLayout.cshtml";
}

<div style="margin: 20px;">
    <h1 style="font-size: 28px; margin-bottom: 30px; color: #333;">Guest Details</h1>

    <div class="container-fluid" style="background-color: #f8f9fa; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <div class="card" style="border: 1px solid #ddd; border-radius: 10px; padding: 25px; margin-bottom: 20px;">
            <h2 style="font-size: 24px; margin-bottom: 25px; color: #333;">Guest Information</h2>
            <hr style="border-top: 1px solid #eee; margin-bottom: 25px;" />

            <dl class="row" style="margin-bottom: 20px;">
                <dt class="col-sm-4" style="font-weight: 600; color: #555; font-size: 16px; padding-bottom: 10px;">WeddingId</dt>
                <dd class="col-sm-8" style="font-size: 16px; color: #333; padding-bottom: 10px;">@Html.DisplayFor(model => model.WeddingId)</dd>
                <dt class="col-sm-4" style="font-weight: 600; color: #555; font-size: 16px; padding-bottom: 10px;">Name</dt>
                <dd class="col-sm-8" style="font-size: 16px; color: #333; padding-bottom: 10px;">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-4" style="font-weight: 600; color: #555; font-size: 16px; padding-bottom: 10px;">RSVP Status</dt>
                <dd class="col-sm-8" style="font-size: 16px; color: #333; padding-bottom: 10px;">
                    @if (Model.HasRSVPed)
                    {
                        <span class="badge bg-success" style="background-color: #28a745; color: white; padding: 8px 12px; border-radius: 15px; font-size: 0.9em;">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark" style="background-color: #ffc107; color: #333; padding: 8px 12px; border-radius: 15px; font-size: 0.9em;">No</span>
                    }
                </dd>
                <dt class="col-sm-4" style="font-weight: 600; color: #555; font-size: 16px; padding-bottom: 10px;">Meal Preference</dt>
                <dd class="col-sm-8" style="font-size: 16px; color: #333; padding-bottom: 10px;">@Html.DisplayFor(model => model.MealPreference)</dd>
                <dt class="col-sm-4" style="font-weight: 600; color: #555; font-size: 16px; padding-bottom: 10px;">Seating Arrangement</dt>
                <dd class="col-sm-8" style="font-size: 16px; color: #333; padding-bottom: 10px;">@Html.DisplayFor(model => model.SeatingArrangement)</dd>
            </dl>

            <div style="margin-top: 20px;">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary" style="background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 5px; font-size: 16px; margin-right: 15px;">Edit</a>
                <a asp-action="Index" class="btn btn-secondary" style="background-color: #6c757d; color: white; padding: 10px 20px; border: none; border-radius: 5px; font-size: 16px;">Back to List</a>
            </div>
        </div>
    </div>
</div>

