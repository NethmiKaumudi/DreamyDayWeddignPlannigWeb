@model DreamyDayWeddingPlanningWeb.Models.Guest

@{
    ViewData["Title"] = "Edit Guest";
    Layout = "~/Views/Shared/_CoupleLayout.cshtml";
}

<h1 style="font-size: 24px; margin-bottom: 20px;">Edit</h1>

<h4 style="font-size: 20px; margin-bottom: 10px;">Guest</h4>
<hr />

<div class="container-fluid">
    <div class="card">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="WeddingId" class="form-label"></label>
                <select asp-for="WeddingId" class="form-control" asp-items="ViewBag.WeddingId"></select>
                <span asp-validation-for="WeddingId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input class="form-check-input" asp-for="HasRSVPed" />
                <label class="form-check-label" for="HasRSVPed">RSVP Status</label>
            </div>
            <div class="mb-3">
                <label asp-for="MealPreference" class="form-label"></label>
                <select asp-for="MealPreference" class="form-control" asp-items="ViewBag.MealTypes">
                    <option value="">Select a meal preference</option>
                </select>
                <span asp-validation-for="MealPreference" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SeatingArrangement" class="form-label"></label>
                <input asp-for="SeatingArrangement" class="form-control" />
                <span asp-validation-for="SeatingArrangement" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

<style>
    .container-fluid {
        max-width: 100%;
        height: calc(100vh - 120px);
        overflow-y: auto;
        padding: 15px;
    }

    .card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: bold;
        color: #333;
        font-size: 14px;
    }

    .form-control {
        width: 100%;
        padding: 6px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
    }

    .mb-3 {
        margin-bottom: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 6px 12px;
        color: #fff;
        border-radius: 5px;
        font-size: 14px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        padding: 6px 12px;
        color: #fff;
        border-radius: 5px;
        margin-left: 10px;
        font-size: 14px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .text-danger {
        font-size: 0.9em;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}