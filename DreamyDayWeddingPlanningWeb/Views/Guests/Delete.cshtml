@model DreamyDayWeddingPlanningWeb.Models.Guest

@{
    ViewData["Title"] = "Delete Guest";
    Layout = "~/Views/Shared/_CoupleLayout.cshtml";
}

<h2 class="mb-4 mt-4 text-center" style="font-size: 24px; color: #333;">Delete Guest</h2>

<div class="container-fluid">
    <div class="card">
        <h2 class="mb-3">Are you sure you want to delete this guest?</h2>
        <hr class="mb-3" />

        <dl class="row">
            <dt class="col-sm-4">WeddingId</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.WeddingId)</dd>
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
            <dt class="col-sm-4">RSVP Status</dt>
            <dd class="col-sm-8">
                @if (Model.HasRSVPed)
                {
                    <span class="badge bg-success">Yes</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">No</span>
                }
            </dd>
            <dt class="col-sm-4">Meal Preference</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.MealPreference)</dd>
            <dt class="col-sm-4">Seating Arrangement</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.SeatingArrangement)</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

<style>
    .container-fluid {
        max-width: 100%;
        height: calc(100vh - 120px);
        overflow-y: auto;
        padding: 15px;
    }

    .card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .card h2 {
            font-size: 20px;
            color: #333;
            margin-bottom: 10px;
        }

    .row {
        margin: 0;
    }

    .col-sm-4 {
        font-weight: bold;
        color: #333;
        font-size: 14px;
    }

    .col-sm-8 {
        font-size: 14px;
    }

    .badge {
        padding: 4px 8px;
        border-radius: 10px;
        font-size: 0.8em;
    }

    .bg-success {
        background-color: #28a745 !important;
        color: #fff !important;
    }

    .bg-warning {
        background-color: #ffc107 !important;
        color: #333 !important;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        padding: 6px 12px;
        color: #fff;
        border-radius: 5px;
        font-size: 14px;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        padding: 6px 12px;
        color: #fff;
        border-radius: 5px;
        margin-left: 10px;
        font-size: 14px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>