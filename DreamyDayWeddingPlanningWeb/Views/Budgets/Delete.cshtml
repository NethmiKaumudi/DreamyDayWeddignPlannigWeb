@model DreamyDayWeddingPlanningWeb.Models.Budget

@{
    ViewData["Title"] = "Delete Budget Item";
    Layout = "~/Views/Shared/_CoupleLayout.cshtml";
}

<h1 style="font-size: 24px; margin-bottom: 20px;">Delete Budget Item</h1>

<div class="container-fluid">
    <div class="card">
        <h3 style="font-size: 20px; margin-bottom: 15px;">Are you sure you want to delete this budget item?</h3>
        <dl class="row">
            <dt class="col-sm-4">Category</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>
            <dt class="col-sm-4">Allocated Amount</dt>
            <dd class="col-sm-8">Rs @Html.DisplayFor(model => model.AllocatedAmount)</dd>
            <dt class="col-sm-4">Spent Amount</dt>
            <dd class="col-sm-8">Rs @Html.DisplayFor(model => model.SpentAmount)</dd>
            
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>

<style>
    .container-fluid {
        max-width: 100%;
        height: calc(100vh - 120px);
        overflow-y: auto;
        padding: 15px;
    }

    .card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .row {
        margin-bottom: 15px;
    }

    .col-sm-4 {
        font-weight: bold;
        color: #333;
        font-size: 14px;
    }

    .col-sm-8 {
        font-size: 14px;
        color: #555;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        padding: 6px 12px;
        color: #fff;
        border-radius: 5px;
        font-size: 14px;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        padding: 6px 12px;
        color: #fff;
        border-radius: 5px;
        margin-left: 10px;
        font-size: 14px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>