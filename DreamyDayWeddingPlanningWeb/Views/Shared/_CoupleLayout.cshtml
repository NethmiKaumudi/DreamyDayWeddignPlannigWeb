@* Views/Shared/_CoupleLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DreamyDay Wedding Planning</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(to bottom, #A3BFFA, #E2E8F0);
        }

        .navbar {
            background-color: #fff;
            padding: 15px 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-brand {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            text-decoration: none;
        }

        .navbar-actions {
            display: flex;
            align-items: center;
        }

            .navbar-actions span {
                margin-right: 15px;
                font-size: 16px;
                color: #333;
            }

            .navbar-actions a {
                color: #007bff;
                text-decoration: none;
                font-size: 16px;
            }

                .navbar-actions a:hover {
                    text-decoration: underline;
                }

        .container {
            display: flex;
            min-height: calc(100vh - 120px);
        }

        .sidebar {
            width: 200px;
            background-color: #fff;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

        .sidebar-title {
            font-size: 20px;
            color: #333;
            margin-bottom: 20px;
        }

        .sidebar-nav {
            list-style: none;
            padding: 0;
        }

            .sidebar-nav li {
                margin-bottom: 10px;
            }

            .sidebar-nav a {
                color: #007bff;
                text-decoration: none;
                font-size: 16px;
                display: flex;
                align-items: center;
            }

                .sidebar-nav a i {
                    margin-right: 10px;
                    color: #007bff;
                }

                .sidebar-nav a:hover {
                    text-decoration: underline;
                }

        .content {
            flex: 1;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

        footer {
            text-align: center;
            padding: 10px;
            color: #666;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">DreamyDay</a>
            <div class="navbar-actions">
                <span>Welcome, @User.Identity.Name! 💑</span>
                <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>
            </div>
        </nav>
    </header>

    <div class="container">
        <aside class="sidebar">
            <h3 class="sidebar-title">Couple Menu</h3>
            <ul class="sidebar-nav">
                <li><a asp-controller="Couple" asp-action="Dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                <li><a asp-controller="Couple" asp-action="Overview"><i class="fas fa-chart-pie"></i> Wedding Overview</a></li>
                <li><a asp-controller="Couple" asp-action="Checklist"><i class="fas fa-check-square"></i> Wedding Tasks List</a></li>
                <li><a asp-controller="Couple" asp-action="GuestList"><i class="fas fa-users"></i> Guest List</a></li>
                <li><a asp-controller="Couple" asp-action="Budget"><i class="fas fa-wallet"></i> Budget Tracker</a></li>
                <li><a asp-controller="Couple" asp-action="Timeline"><i class="fas fa-calendar-alt"></i> Timeline</a></li>
                <li><a asp-controller="Couple" asp-action="Vendors"><i class="fas fa-store"></i> Vendor Catalog</a></li>
                <li><a asp-controller="Couple" asp-action="Notifications"><i class="fas fa-bell"></i> Notifications</a></li>
                <li><a asp-controller="Couple" asp-action="PlannerCommunication"><i class="fas fa-comments"></i> Chat with Planner</a></li>
                <li><a asp-controller="Couple" asp-action="Profile"><i class="fas fa-user"></i> Profile Settings</a></li>
            </ul>
        </aside>

        <main class="content">
            @RenderBody()
        </main>
    </div>

    <footer>
        © 2025 DreamyDay Wedding Planning. All rights reserved.
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>