@* Views/Couple/Dashboard.cshtml *@
@{
    ViewData["Title"] = "Couple Dashboard";
    Layout = "~/Views/Shared/_CoupleLayout.cshtml";
}

<h1 style="font-size: 24px; margin-bottom: 20px;">DASHBOARD</h1>

<div class="dashboard-container">
    <div class="row">
        <!-- Wedding Progress -->
        <div class="col-md-4">
            <div class="card">
                <h3>Wedding Progress</h3>
                <p>60.5% Complete</p>
                <div class="progress-bar" style="width: 60.5%;"></div>
            </div>
        </div>

        <!-- Notifications -->
        <div class="col-md-4">
            <div class="card">
                <h3>Notifications / Reminders</h3>
                <div class="notification-list">
                    <p class="notification-item"><span class="icon">📢</span> Reminder: Book venue by tomorrow!</p>
                    <p class="notification-item"><span class="icon">📢</span> RSVP received from John Doe</p>
                    <p class="notification-item"><span class="icon">📢</span> Planner sent a new message</p>
                </div>
                <a asp-action="Notifications" asp-controller="Couple" class="btn">View All Notifications</a>
            </div>
        </div>

        <!-- Upcoming Tasks -->
        <div class="col-md-4">
            <div class="card">
                <h3>Upcoming Tasks</h3>
                <div class="task-list">
                    <p class="task-item"><span class="icon">📋</span> Book caterer (Due: 2025-04-20)</p>
                    <p class="task-item"><span class="icon">📋</span> Finalize guest list (Due: 2025-04-25)</p>
                    <p class="task-item"><span class="icon">📋</span> Choose wedding cake (Due: 2025-05-01)</p>
                </div>
                <a asp-action="Checklist" asp-controller="Couple" class="btn">Manage Checklist</a>
            </div>
        </div>
    </div>

    <div class="row mt-12">
        <!-- Quick Stats -->
        <div class="col-md-4">
            <div class="card">
                <h3>Quick Stats</h3>
                <p><span class="icon">👥</span> Guests: 120</p>
                <p><span class="icon">💰</span> Budget: $15,000 / $30,000</p>
                <p><span class="icon">📅</span> Wedding Date: 12/15/2025</p>
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard-container {
        flex: 1;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .col-md-4 {
        flex: 1;
        min-width: 300px;
    }

    .card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        height: 100%;
    }

        .card h3 {
            margin-top: 0;
            color: #333;
            font-size: 18px;
        }

    .progress-bar {
        height: 20px;
        background-color: #4CAF50;
        border-radius: 5px;
        transition: width 0.3s ease;
    }

    .notification-list, .task-list {
        max-height: 150px;
        overflow-y: auto;
    }

    .notification-item, .task-item {
        margin: 5px 0;
        padding: 5px;
        background-color: #f9f9f9;
        border-left: 3px solid #007bff;
        display: flex;
        align-items: center;
    }

    .icon {
        margin-right: 10px;
        color: #ff0000; /* Red for notifications, blue for tasks */
    }

    .task-item .icon {
        color: #007bff;
    }

    .btn {
        display: inline-block;
        padding: 8px 15px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        margin-top: 10px;
        text-align: center;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .mt-4 {
        margin-top: 20px;
    }
</style>