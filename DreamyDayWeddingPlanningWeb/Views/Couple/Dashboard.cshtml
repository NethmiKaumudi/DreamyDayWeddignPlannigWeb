@model DreamyDayWeddingPlanningWeb.Models.Wedding

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_CoupleLayout.cshtml";
}

<h1 style="font-size: 24px; margin-bottom: 20px;">Dashboard</h1>

<div class="container-fluid" style="padding: 15px;">
    @if (TempData["PlannerError"] != null)
    {
        <div class="alert alert-warning" role="alert">
            @TempData["PlannerError"]
        </div>
    }

    @if (!ViewBag.HasWedding)
    {
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <h2 class="mb-3">Create Your Wedding</h2>
                    <hr class="mb-3" />
                    <form asp-action="CreateWedding" method="post">
                        
                        <div class="mb-3">
                            <label for="weddingDate" class="form-label">Wedding Date</label>
                            <input type="date" id="weddingDate" name="weddingDate" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="totalBudget" class="form-label">Total Budget</label>
                            <input type="number" id="totalBudget" name="totalBudget" class="form-control" step="0.01" />
                        </div>
                        <div class="mb-3">
                            <label for="plannerId" class="form-label">Planner</label>
                            <select id="plannerId" name="plannerId" class="form-control">
                                <option value="">Select a planner</option>
                                @if (ViewBag.Planners != null)
                                {
                                    @foreach (var planner in ViewBag.Planners)
                                    {
                                        <option value="@planner.Id">@planner.UserName (@planner.ContactNumber)</option>
                                    }
                                }
                            </select>
                            @if (ViewData.ModelState.ContainsKey("plannerId"))
                            {
                                <span class="text-danger">@ViewData.ModelState["plannerId"].Errors.FirstOrDefault()?.ErrorMessage</span>
                            }
                        </div>
                        <button type="submit" class="btn btn-primary">Create Wedding</button>
                    </form>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <h2 class="mb-3">Getting Started</h2>
                    <hr class="mb-3" />
                    <p class="text-muted">Start by creating your wedding event. Once created, you’ll be able to manage guests, budget, and much more.</p>
                    <ul>
                        <li>Assign a wedding planner to help you organize.</li>
                        <li>Track your total and spent budget.</li>
                        <li>Add guests and tasks to keep everything on schedule.</li>
                    </ul>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <h2 class="mb-3">Wedding Details</h2>
                    <hr class="mb-3" />
                    <dl class="row">
                        <dt class="col-sm-4">Wedding Title</dt>
                        <dt class="col-sm-4">Wedding Date</dt>
                        <dd class="col-sm-8">@Model.WeddingDate.ToString("MM/dd/yyyy")</dd>
                        <dt class="col-sm-4">Total Budget</dt>
                        <dd class="col-sm-8">Rs @Model.TotalBudget.ToString("N2")</dd>
                        <dt class="col-sm-4">Spent Budget</dt>
                        <dd class="col-sm-8">Rs @Model.SpentBudget.ToString("N2")</dd>
                        <dt class="col-sm-4">Planner</dt>
                        <dd class="col-sm-8">
                            @(Model.Planner != null ? $"{Model.Planner.UserName} ({Model.Planner.ContactNumber})" : "No Planner Assigned")
                        </dd>
                    </dl>
                    <div>
                        <a asp-action="EditWedding" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="DeleteWedding" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <h2 class="mb-3">Quick Stats</h2>
                    <hr class="mb-3" />
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="fas fa-users mr-2"></i> Guests
                        </dt>
                        <dd class="col-sm-8">@ViewBag.GuestCount</dd>
                        <dt class="col-sm-4">
                            <i class="fas fa-wallet mr-2"></i> Budget
                        </dt>
                        <dd class="col-sm-8">Rs @Model.SpentBudget.ToString("N2") / Rs @Model.TotalBudget.ToString("N2")</dd>
                        <dt class="col-sm-4">
                            <i class="fas fa-calendar-alt mr-2"></i> Wedding Date
                        </dt>
                        <dd class="col-sm-8">@Model.WeddingDate.ToString("MM/dd/yyyy")</dd>
                        <dt class="col-sm-4">
                            <i class="fas fa-chart-line mr-2"></i> Progress
                        </dt>
                        <dd class="col-sm-8">@Model.Progress%</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card" style="max-height: 500px; overflow-y: auto;">
                    <h2 class="mb-3">Upcoming Wedding Tasks</h2>
                    <hr class="mb-3" />
                    @if (ViewBag.Tasks != null && ViewBag.Tasks.Count > 0)
                    {
                        @foreach (var task in ViewBag.Tasks)
                        {
                            <div class="task-item">
                                <input type="checkbox" disabled @(task.IsCompleted ? "checked" : "") />
                                <span>@task.TaskName (Due: @task.Deadline.ToString("yyyy-MM-dd"))</span>
                                <span class="badge @(task.IsCompleted ? "bg-success" : "bg-warning")">
                                    @(task.IsCompleted ? "Completed" : "Pending")
                                </span>
                            </div>
                        }
                        <div class="mt-3">
                            <a asp-controller="WeddingTasks" asp-action="Index" class="btn btn-primary">Manage Task List</a>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No upcoming tasks.</p>
                    }
                </div>
            </div>

            <div class="col-md-6">
                <div class="card" style="max-height: 500px; overflow-y: auto;">
                    <h2 class="mb-3">Wedding Day Timeline</h2>
                    <hr class="mb-3" />
                    <ul>
                        <li>10:00 AM - Bride's Preparation</li>
                        <li>12:00 PM - Groom's Arrival</li>
                        <li>02:00 PM - Ceremony Start</li>
                        <li>03:30 PM - Reception</li>
                        <li>07:00 PM - Dinner</li>
                        <li>08:00 PM - Cake Cutting</li>
                        <li>09:00 PM - First Dance</li>
                        <li>10:00 PM - Party</li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .container-fluid {
        max-width: 100%;
        padding: 15px;
    }

    .card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

        .card h2 {
            font-size: 20px;
            color: #333;
        }

    .row {
        margin-bottom: 20px;
    }

    .col-sm-4 {
        font-weight: bold;
        color: #333;
    }

    .col-sm-8 {
        color: #555;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 8px 15px;
        color: #fff;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        padding: 8px 15px;
        color: #fff;
        border-radius: 5px;
        margin-left: 10px;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .task-item {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

        .task-item span {
            margin-left: 10px;
        }

    .badge {
        margin-left: 10px;
        padding: 5px 10px;
        border-radius: 10px;
    }

    .bg-success {
        background-color: #28a745 !important;
        color: #fff !important;
    }

    .bg-warning {
        background-color: #ffc107 !important;
        color: #333 !important;
    }

    .form-label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .mb-3 {
        margin-bottom: 15px;
    }

    .mr-2 {
        margin-right: 8px;
    }
</style>

@section Scripts {
    @if (TempData["BudgetExceededMessage"] != null)
    {
        <script>
                window.onload = function() {
                alert('@TempData["BudgetExceededMessage"]');
            };
        </script>
    }
}