@* Views/WeddingTasks/Details.cshtml *@
@model DreamyDayWeddingPlanningWeb.Models.WeddingTask

@{
    ViewData["Title"] = "Task Details";
    Layout = "~/Views/Shared/_CoupleLayout.cshtml";
}

<h1 style="font-size: 24px; margin-bottom: 20px;">Task Details</h1>

<div class="container-fluid">
    <div class="card">
        <h2 class="mb-3">Task Details</h2>
        <hr class="mb-3" />

        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TaskName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TaskName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Deadline)</dt>
            <dd class="col-sm-9">@Model.Deadline.ToString("MMM dd, yyyy")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsCompleted)</dt>
            <dd class="col-sm-9">
                @if (Model.IsCompleted)
                {
                    <span class="badge bg-success">Completed</span>
                }
                else
                {
                    <span class="badge bg-warning">Pending</span>
                }
            </dd>
        </dl>

        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" asp-controller="WeddingTasks" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

<style>
    .container-fluid {
        max-width: 600px;
        margin: 0 auto;
    }

    .card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .card h2 {
            font-size: 20px;
            color: #333;
        }

    .row {
        margin: 0;
    }

    .col-sm-3 {
        font-weight: bold;
        color: #333;
    }

    .badge {
        padding: 5px 10px;
        border-radius: 5px;
    }

    .bg-success {
        background-color: #28a745;
        color: #fff;
    }

    .bg-warning {
        background-color: #ffc107;
        color: #333;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 8px 15px;
        color: #fff;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        padding: 8px 15px;
        color: #fff;
        border-radius: 5px;
        margin-left: 10px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>