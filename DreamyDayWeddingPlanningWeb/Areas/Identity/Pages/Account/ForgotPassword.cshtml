@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<!-- Main content with split layout -->
<div class="main-container">
    <!-- Left section with gradient background -->
    <div class="left-section">
        <div>
            <h1>Forgot Your Password?</h1>
            <p>Enter your email to receive a password reset link.</p>
        </div>
    </div>

    <!-- Right section with form -->
    <div class="right-section">
        <div class="form-container">
            <h2>Reset Password</h2>
            <hr class="mb-2" />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <form method="post">
                <!-- Email Field -->
                <div class="mb-1">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="border-radius: 5px; padding: 6px;" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-lg mt-2" style="background-color: #0056b3; color: white; border-radius: 5px; padding: 6px; width: 80%; margin: 0 auto; display: block;">Reset Password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

