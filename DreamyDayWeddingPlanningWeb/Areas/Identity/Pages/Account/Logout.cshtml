@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DreamyDayWeddingPlanningWeb</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa; /* Light gray background to match Register page */
        }

        .main-content {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .blue-box {
            background-color: #007bff; /* Blue background matching Register page */
            color: white;
            border-radius: 15px 0 0 15px;
            padding: 40px;
            height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .white-box {
            background-color: white;
            border-radius: 0 15px 15px 0;
            padding: 40px;
            height: 400px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Subtle shadow to match Register page */
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>
<body>
    <!-- Main Content -->
    <div class="main-content">
        <div class="row w-75">
            <!-- Left Blue Box -->
            <div class="col-md-6 blue-box">
                <h1>DreamyDay</h1>
            </div>
            <!-- Right White Box -->
            <div class="col-md-6 white-box">
                <h2>@ViewData["Title"]</h2>
                <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                    <button type="submit" class="btn btn-primary btn-block">Logout</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (optional, for any interactive elements) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-LtrjvnR4Twt/qOuYxE721u19sVFLVSA4hf/rRt6PrZTmiPltdZcI7q7PXQBYTKyf" crossorigin="anonymous"></script>
</body>
</html>