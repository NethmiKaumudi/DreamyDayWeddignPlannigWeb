@page
@model ConfirmEmailModel

@{
    ViewData["Title"] = "Confirm Email";
}

<!-- Main content with split layout -->
<div class="main-container">
    <!-- Left section with gradient background -->
    <div class="left-section">
        <div>
            <h1>Email Confirmation</h1>
            <p>Thank you for confirming your email.</p>
        </div>
    </div>

    <!-- Right section with confirmation message -->
    <div class="right-section">
        <div class="register-container">
            @if (Model.IsConfirmed)
            {
                <h2>Email Confirmed</h2>
                <p>
                    Your email has been successfully confirmed. You can now
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">sign in</a> to continue planning your wedding.
                </p>
            }
            else
            {
                <h2>Confirmation Failed</h2>
                <p>
                    There was an error confirming your email. The link may be invalid or expired.
                    Please try registering again or contact support.
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register again</a>
                </p>
            }
        </div>
    </div>
</div>

<style>
    /* Reuse the same styles as Register.cshtml for consistency */
    html, body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        height: 100%;
        background-color: #ffffff;
        overflow-x: hidden;
        overflow-y: hidden;
    }

    .main-container {
        display: flex;
        height: calc(100vh - 140px);
        align-items: stretch;
        width: 100%;
        margin: 0;
        padding: 0;
    }

    .left-section {
        flex: 0 0 50%;
        background: linear-gradient(to bottom, #4a90e2, #0056b3);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ffffff;
        position: relative;
        overflow: hidden;
        margin: 0;
        padding: 0;
    }

    .left-section h1 {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .left-section p {
        font-size: 1rem;
        opacity: 0.8;
    }

    .left-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="rgba(255,255,255,0.1)" fill-opacity="1" d="M0,160L48,176C96,192,192,224,288,213.3C384,203,480,149,576,138.7C672,128,768,160,864,181.3C960,203,1056,213,1152,197.3C1248,181,1344,139,1392,117.3L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') no-repeat bottom;
        background-size: cover;
    }

    .right-section {
        flex: 0 0 50%;
        background-color: #ffffff;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
        padding: 0;
        overflow-y: auto;
    }

    .register-container {
        width: 100%;
        max-width: 400px;
        padding: 15px;
    }

    .register-container h2 {
        font-size: 1.5rem;
        color: #333;
        margin-bottom: 0.5rem;
        text-align: center;
    }

    .register-container p {
        font-size: 0.9rem;
        color: #6c757d;
        text-align: center;
    }

    .register-container a {
        color: #2A5298;
        text-decoration: none;
        font-weight: 500;
    }

    .register-container a:hover {
        text-decoration: underline;
        color: #1A3C78;
    }
</style>