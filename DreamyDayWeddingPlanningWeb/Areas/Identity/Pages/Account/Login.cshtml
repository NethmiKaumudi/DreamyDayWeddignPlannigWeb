@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    /* General styling */
    html, body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        height: 100%; /* Ensure full height for the body */
        background-color: #ffffff; /* White background for the page */
    }

    /* Main container with split layout */
    .main-container {
        display: flex;
        height: 80vh;
        align-items: stretch;
        width: 100%; /* Ensure it takes the full width of the parent */
        margin: 0; /* Remove any default margins */
        padding: 0; /* Remove any default padding */
    }

    /* Left side with blue background */
    .left-section {
        flex: 0 0 50%;
        background: linear-gradient(135deg, #4A90E2 0%, #2A5298 100%); /* Blue gradient */
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ffffff;
        position: relative;
        overflow: hidden;
        margin: 0; /* Remove any default margins */
        padding: 0; /* Remove any default padding */
    }

        .left-section h1 {
            font-size: 2rem;
            margin-bottom: 0.5rem; /* Reduced margin */
        }

        .left-section p {
            font-size: 1rem;
            opacity: 0.8;
        }

        /* Decorative wave effect */
        .left-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="rgba(255,255,255,0.1)" fill-opacity="1" d="M0,160L48,176C96,192,192,224,288,213.3C384,203,480,149,576,138.7C672,128,768,160,864,181.3C960,203,1056,213,1152,197.3C1248,181,1344,139,1392,117.3L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') no-repeat bottom;
            background-size: cover;
        }

    /* Right side with login form */
    .right-section {
        flex: 0 0 50%;
        background-color: #ffffff;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0; /* Remove any default margins */
        padding: 0; /* Remove any default padding */
    }

    .login-container {
        width: 100%;
        max-width: 400px;
        padding: 0; /* Remove padding to reduce extra space */
    }

        .login-container h2 {
            font-size: 1.5rem;
            color: #333;
            margin-bottom: 0.5rem; /* Reduced margin */
            text-align: center;
        }

    .login-form {
        display: flex;
        flex-direction: column;
        gap: 0.5rem; /* Reduced gap */
    }

    .form-group {
        text-align: left;
    }

        .form-group label {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 0.25rem;
            display: block;
        }

        .form-group input {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #ced4da;
            border-radius: 5px;
            font-size: 0.9rem;
        }

            .form-group input:focus {
                outline: none;
                border-color: #2A5298;
                box-shadow: 0 0 5px rgba(42, 82, 152, 0.3);
            }

    /* Sign In button */
    .btn-primary {
        background-color: #2A5298; /* Darker blue for the button */
        border: none;
        border-radius: 5px;
        padding: 0.75rem;
        font-size: 0.9rem;
        font-weight: 500;
        color: #ffffff;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #1A3C78; /* Even darker blue on hover */
        }

    /* Links */
    .links {
        margin-top: 0.5rem; /* Reduced margin */
        text-align: center;
    }

        .links p {
            font-size: 0.9rem;
            color: #6c757d;
            margin: 0.25rem 0; /* Reduced margin */
        }

        .links a {
            color: #2A5298;
            text-decoration: none;
            font-weight: 500;
        }

            .links a:hover {
                text-decoration: underline;
                color: #1A3C78;
            }
</style>

<!-- Main content with split layout -->
<div class="main-container">
    <!-- Left section with gradient background -->
    <div class="left-section">
        <div>
            <h1>Welcome to DreamyDay </h1>
            <p>Log in to continue planning your perfect wedding.</p>
        </div>
    </div>

    <!-- Right section with login form -->
    <div class="right-section">
        <div class="login-container">
            <h2>Sign In</h2>
            <form id="account" method="post" class="login-form">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- Username Field -->
                <div class="form-group">
                    <label asp-for="Input.UserName">Username</label>
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>

                <!-- Password Field -->
                <div class="form-group">
                    <label asp-for="Input.Password">Password</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Sign In Button -->
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-primary">Sign In</button>
                </div>

                <!-- Links -->
                <div class="links">
                    <p>
                        <a asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}