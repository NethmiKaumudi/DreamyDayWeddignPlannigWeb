@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 140px); padding: 0;">
    <div class="row w-75 shadow rounded m-0" style="max-height: calc(100vh - 140px); overflow: hidden;">
        <!-- Left Panel -->
        <div class="col-md-6 d-flex flex-column justify-content-center p-3" style="background: linear-gradient(to bottom, #4a90e2, #0056b3); color: white; border-radius: 10px 0 0 10px;">
            <h1 class="display-5 fw-bold mb-2">Welcome to DreamyDay DD</h1>
            <p class="lead mb-0">Log in to continue planning your perfect wedding.</p>
        </div>

        <!-- Right Panel (Form) -->
        <div class="col-md-6 bg-white p-3 d-flex flex-column" style="border-radius: 0 10px 10px 0; overflow-y: auto; max-height: calc(100vh - 100px);">
            <h2 class="mb-2">Sign In</h2>
            <hr class="mb-2" />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <form id="account" method="post">
                <!-- Username Field -->
                <div class="mb-1">
                    <label asp-for="Input.UserName" class="form-label"></label>
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="Username" style="border-radius: 5px; padding: 6px;" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>

                <!-- Password Field -->
                <div class="mb-1">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" style="border-radius: 5px; padding: 6px;" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Remember Me Checkbox -->
                <div class="mb-1">
                    <div class="form-check">
                        <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">Remember me?</label>
                    </div>
                </div>

                <!-- Sign In Button -->
                <button id="login-submit" type="submit" class="btn btn-lg mt-2" style="background-color: #0056b3; color: white; border-radius: 5px; padding: 6px; width: 80%; margin: 0 auto; display: block;">Sign In</button>

                <!-- Links -->
                <div class="mt-2 text-center">
                    <p class="mb-1">
                        <a asp-page="" style="color: #0056b3; text-decoration: none;">Forgot your password?</a>
                    </p>
                    <p class="mb-0">
                        Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: #0056b3; text-decoration: none;">Sign Up</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}